  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "prettier": "^3.6.2",
    "vite": "^7.0.6"
